<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:FunctionBilder.Dekstop.UserControls"
        x:Class="FunctionBilder.Dekstop.View.GraphicWindow"
        Height="150" Width="400" MaxWidth="400" MinWidth="400"
        MaxHeight="200" MinHeight="200" Position="300,620">
  <StackPanel Background="#F05171">
    <views:input x:Name="InputBox"/>
    <views:RangePanel x:Name="GapBoxs"/>
    <DockPanel>
      <views:GraphicCheckBoxes/>
      <ContextMenu Cursor="UpArrow">
        <MenuItem Header="Color" Tapped="OpenMenu">
          <MenuItem.ContextMenu>
            <ContextMenu x:Name="ColorMenu" Tapped="AddColor">
            </ContextMenu>
          </MenuItem.ContextMenu>
        </MenuItem>
      </ContextMenu>
    </DockPanel>
    <Button Grid.Column="0" Content="Add new function" BorderThickness="10"
            Classes="BigButton" Background="#FF9797" Click="AddFunction"/>
  </StackPanel>
</Window>
